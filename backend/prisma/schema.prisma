generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// EditJob — tracks every AI editing request
model EditJob {
  id        String   @id @default(cuid())
  feature   String   // "bg-removal" | "inpaint" | "style-transfer"
  status    String   @default("pending") // "pending" | "processing" | "done" | "failed"
  inputUrl  String?  // original image URL (optional — stored in Cloudinary)
  outputUrl String?  // result image URL (Cloudinary URL)
  prompt    String?  // text prompt used (for inpaint / style-transfer)
  error     String?  // error message if failed
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
